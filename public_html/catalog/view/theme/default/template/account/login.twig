{{ header }}
<div id="account-login" class="container">
	<div itemscope="" itemtype="http://schema.org/BreadcrumbList" class="breadcrumb hidden">
		{% for key, breadcrumb in breadcrumbs %}
		<span itemscope="" itemprop="itemListElement" itemtype="http://schema.org/ListItem" class="breadcrumb-item">
			{% if key + 1 < breadcrumbs|length %}
			<a itemprop="item" title="{{ breadcrumb.text }}" href="{{ breadcrumb.href }}">
				<span itemprop="name">{{ breadcrumb.text }}</span>
				<meta itemprop="position" content="{{ key + 1 }}">
			</a>
			{% else %}
			<a rel="nofollow" itemprop="item" title="{{ breadcrumb.text }}" href="{{ breadcrumb.href }}">
				<span itemprop="name">{{ breadcrumb.text }}</span>
				<meta itemprop="position" content="{{ key + 1 }}">
			</a>
			{% endif %}
		</span>
		{% endfor %}
	</div>
	{% if success %}
	<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
	{% endif %}
	{% if error_warning %}
	<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
	{% endif %}
	<h1 class="page-title hidden">{{ text_new_customer }}</h1>
	<div class="account-login-page">
		<form action="{{ action }}" method="post" enctype="multipart/form-data">
			<h2>{{ text_i_am_returning_customer }}</h2>
			<div class="form-group">
				<input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="input2" />
			</div>
			<div class="form-group">
				<input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="input2" />
			</div>
			<a href="{{ forgotten }}">{{ text_forgotten }}</a>
			<div class="form-group-submit">
				<input type="submit" value="{{ button_login }}" />
			</div>
			{% if redirect %}
			<input type="hidden" name="redirect" value="{{ redirect }}" />
			{% endif %}
			<div class="register-link"><a href="{{ register }}">Еще не зарегистрированы?</a></div>
		</form>
	</div>
	{{ column_left }}
	{{ column_right }}
	{{ content_top }}
	{{ content_bottom }}
</div>
{{ footer }}