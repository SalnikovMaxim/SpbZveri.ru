{{ header }}
<div id="product-manufacturer" class="container">
   <div itemscope="" itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
		{% for key, breadcrumb in breadcrumbs %}
		<span itemscope="" itemprop="itemListElement" itemtype="http://schema.org/ListItem" class="breadcrumb-item">
			{% if key + 1 < breadcrumbs|length %}
			<a itemprop="item" title="{{ breadcrumb.text }}" href="{{ breadcrumb.href }}">
				<span itemprop="name">{{ breadcrumb.text }}</span>
				<meta itemprop="position" content="{{ key + 1 }}">
			</a>
			{% else %}
			<a rel="nofollow" itemprop="item" title="{{ breadcrumb.text }}" href="{{ breadcrumb.href }}">
				<span itemprop="name">{{ breadcrumb.text }}</span>
				<meta itemprop="position" content="{{ key + 1 }}">
			</a>
			{% endif %}
		</span>
		{% endfor %}
	</div>
{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
	 {{ content_top }}
	 
	 
	<div id="content" class="brand-list">
		<h1 class="page-title">{{ heading_title }}<span class="totalman">{{ totalm }}</span></h1>
		{% if categories %}
		<div class="brend-sort-list">
			<strong>Все бренды: </strong> 
			{% for category in categories %}
			<a href="index.php?route=product/manufacturer#{{ category.name }}">{{ category.name }}</a> 
			{% endfor %} 
		</div>
		{% for category in categories %}
		<div id="{{ category.name }}" class="brend-sort-item">{{ category.name }}</div>
		{% if category.manufacturer %}
		<div class="row marginbmanuf"> 
 
			{% for manufacturer in category.manufacturer %}
			<div class="col-brend"><a href="{{ manufacturer.href }}">{{ manufacturer.name }}</a></div>
			{% endfor %} 
 
		</div>
		{% endif %}
		{% endfor %}
		{% else %}
		<p>{{ text_empty }}</p>
		<div class="buttons clearfix">
		<div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
		</div>
		{% endif %}
	</div>
	
	
   {{ content_bottom }}
    {{ column_right }} 
</div>
{{ footer }}